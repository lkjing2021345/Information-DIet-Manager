{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/ingest-item.json",
  "title": "IngestItem",
  "type": "object",
  "additionalProperties": false,
  "required": ["url", "title", "ts", "source"],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "maxLength": 2048,
      "description": "Content URL."
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 300,
      "description": "Title or short summary."
    },
    "text": {
      "type": "string",
      "maxLength": 2000,
      "description": "Optional description or truncated body."
    },
    "ts": {
      "type": "integer",
      "description": "Unix epoch milliseconds (access time)."
    },
    "source": {
      "type": "string",
      "enum": ["plugin", "import"]
    },
    "lang": {
      "type": "string",
      "maxLength": 16
    },
    "channel": {
      "type": "string",
      "maxLength": 32,
      "description": "short_video | news | social | other"
    },
    "author": {
      "type": "string",
      "maxLength": 120
    },
    "tags": {
      "type": "array",
      "items": { "type": "string", "maxLength": 40 }
    },
    "meta": {
      "type": "object",
      "description": "Extra plugin/import fields"
    }
  }
}

